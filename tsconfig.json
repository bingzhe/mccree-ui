{
    "compilerOptions": {
        "outDir": "dist",
        "declaration": true,
        "baseUrl": ".",
        "module": "esnext",
        "target": "es6",
        "lib": [
            "es6",
            "dom"
        ],
        "sourceMap": true,
        "jsx": "react",
        "moduleResolution": "node",
        "rootDir": ".",
        "forceConsistentCasingInFileNames": true,
        "noImplicitReturns": true,
        "noImplicitThis": true,
        "noImplicitAny": true,
        "importHelpers": true,
        "strictNullChecks": true,
        "esModuleInterop": true,
        "noUnusedLocals": true,
        "types": [
            "react",
            "jest",
            "node",
            "webpack-env"
        ]
    },
    "include": [
        "components/**/*"
    ],
    "exclude": [
        "node_modules",
        "build",
        "dist",
        "scripts",
        "acceptance-tests",
        "webpack",
        "jest",
        "src/setupTests.ts",
        "*.js"
    ]
}